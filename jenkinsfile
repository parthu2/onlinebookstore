pipeline{
    
    agent any 
    
    stages {
        
        stage('Git Checkout'){
            
            steps{
                    
                   git branch: 'J2EE', url: 'git@github.com:parthu2/onlinebookstore.git'
                }
            }
            stage('compile'){
            
            steps{
                
                script{
                    
                    sh 'mvn compile'
                }
            }
        }
            
          stage('UNIT testing'){
            
            steps{
                
                script{
                    
                    sh 'mvn test'
                }
            }
        }
         stage('Integration testing'){
            
            steps{
                
                script{
                    
                    sh 'mvn verify -DskipUnitTests'
                }
            }
        }
        stage('Maven build package'){
            
            steps{
                    
                    sh 'mvn clean package'
            }
        }
        stage('upload war file to nexus'){
            
            steps{
                
                script{
                    def readPomVersion = readMavenPom file: 'pom.xml'
                    def nexusRepo = readPomVersion.version.endsWith("SNAPSHOT") ? "prmaven-snapshot" : "prmaven-release"
                    nexusArtifactUploader artifacts: 
                    [
                      [
                      artifactId: 'onlinebookstore', 
                      classifier: '', file: 'target/onlinebookstore.war', 
                      type: 'war'
                      ]
                      ], 
                      credentialsId: 'nexus-auth', 
                      groupId: 'onlinebookstore', 
                      nexusUrl: '18.217.94.5:8081', 
                      nexusVersion: 'nexus3', 
                      protocol: 'http', 
                      repository: nexusRepo, 
                      version: "${readPomVersion.version}"
                    
                }
            }
        }
     }
   }  
